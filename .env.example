# Herdbot Configuration
# Copy this file to .env and fill in your values

# Server identification
HERDBOT_SERVER_ID=herdbot-01
HERDBOT_INSTANCE_NUMBER=1

# API settings
HERDBOT_API_HOST=0.0.0.0
HERDBOT_API_PORT=8000

# Zenoh settings
HERDBOT_ZENOH_MODE=peer
# HERDBOT_ZENOH_LISTEN=["tcp/0.0.0.0:7447"]
# HERDBOT_ZENOH_CONNECT=[]

# MQTT bridge (for ESP32/Pico)
HERDBOT_MQTT_ENABLED=true
HERDBOT_MQTT_PORT=1883

# Device management
HERDBOT_HEARTBEAT_INTERVAL_MS=2000
HERDBOT_HEARTBEAT_TIMEOUT_MS=6000

# AI providers (optional)
# HERDBOT_OPENAI_API_KEY=sk-...
# HERDBOT_ANTHROPIC_API_KEY=sk-ant-...
# HERDBOT_DEFAULT_AI_PROVIDER=openai

# Visualization
HERDBOT_RERUN_ENABLED=true

# Logging
HERDBOT_LOG_LEVEL=INFO
HERDBOT_LOG_FORMAT=json
